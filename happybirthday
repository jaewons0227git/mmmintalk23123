    <!-- canvas‑confetti 라이브러리 -->
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>

    <script>
        const isMobile = window.innerWidth < 768;

        function launchSmartFireworks() {
            const particleCount = isMobile ? 30 : 60;
            const colors = ['#ff0000', '#ffd700', '#ff00ff', '#00ff00', '#00eaff', '#ffffff', '#ff8800'];

            // 최초 전체 폭죽
            confetti({
                particleCount: 100,
                spread: 180,
                origin: { x: 0.5, y: 0.5 },
                colors: colors,
                scalar: 1.5,
                gravity: 0.5,
                ticks: 200
            });

            // 좌·우 하단 지속 불꽃
            setInterval(() => {
                confetti({
                    particleCount: particleCount / 2,
                    angle: 60,
                    spread: 55,
                    origin: { x: 0, y: 0.8 },
                    colors: colors,
                    gravity: 0.8,
                    ticks: 150
                });
                confetti({
                    particleCount: particleCount / 2,
                    angle: 120,
                    spread: 55,
                    origin: { x: 1, y: 0.8 },
                    colors: colors,
                    gravity: 0.8,
                    ticks: 150
                });
                if (Math.random() > 0.5) {
                    confetti({
                        particleCount: particleCount,
                        spread: 100,
                        origin: { x: Math.random(), y: Math.random() * 0.5 },
                        colors: colors,
                        scalar: 1.2
                    });
                }
            }, isMobile ? 2500 : 1500);
        }

        window.onload = launchSmartFireworks;
    </script>
